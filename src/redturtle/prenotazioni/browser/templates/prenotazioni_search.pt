<metal:use use-macro="context/@@ploneform-macros/titlelessform" />
<div class="search-result-wrapper"
     i18n:domain="redturtle.prenotazioni"
     tal:condition="python:booking_length"
     tal:define="bookings view/get_brains;
                 booking_length python:len(bookings) or 0;
                 icon_url string:/++plone++redturtle.prenotazioni/calendar-icon.png;">
  <div class="visualClear"></div>
  <h2 i18n:translate="search_result_message">Search result</h2>
  <div class="search_parameters" tal:condition="view/search_string">
    <h3 i18n:translate="">Search for</h3>
    <p tal:content="structure view/search_string"/>
  </div>
  <div class="download float-right">
  <a tal:attributes="href view/download_url"> <i class="fas fa-download" aria-hidden="true"></i> Download prenotazioni</a>
  </div>
  <p>
    <strong tal:content="string:${booking_length}">1234</strong>
    <span i18n:translate="result_number">
      items matching your search terms.</span>
  </p>
  <div tal:condition="bookings" 
       tal:define="prenotazioni_states view/get_prenotazioni_states;">
    <tal:batch
        define="Batch python:modules['Products.CMFPlone'].Batch;
                b_size python:25;
                b_start python:0;
                b_start request/b_start | b_start;
                batch_base_url string:${context/absolute_url}/${view/__name__};
                batch python:Batch(bookings, b_size, int(b_start));">
        <table class="listing collection-listing" summary="Content listing"
          i18n:attributes="summary">
          <thead>
            <tr>
              <th i18n:translate="label_fullname">Fullname</th>
              <th i18n:translate="label_phone">Phone</th>
              <th i18n:translate="label_gate">Gate</th>
              <th i18n:translate="label_typology">Typology</th>
              <th i18n:translate="label_email">Email</th>
              <th i18n:translate="reservation_date">Reservation date</th>
              <th i18n:translate="reservation_code">Code</th>
            </tr>
          </thead>
          <tbody>
            <tal:block tal:repeat="item batch">
              <tr tal:define="oddrow repeat/item/odd;
                              obj python:item.getObject();
                              review_state item/review_state;
                              state python:prenotazioni_states[item.review_state];
                              gate python:getattr(obj, 'gate', '');
                              phone python:getattr(obj, 'phone', '');
                              tipologia_prenotazione python:getattr(obj, 'tipologia_prenotazione', '');
                              email python:getattr(obj, 'email', '');
                              booking_code python:obj.getBookingCode();
                              date_time python:view.prenotazioni_week_view.localized_time(item['Date']) + ' - ' + view.prenotazioni_week_view.localized_time(item['Date'], time_only=True);
                              subject python: ' '.join(filter(bool, [tipologia_prenotazione, 'del', date_time ]));
                              row_class python:oddrow and 'even' or 'odd';
                              class_and_state python: row_class + ' ' + review_state"
                  tal:attributes="class class_and_state" >
                <td>
                  <img src="" tal:attributes="src icon_url"/>
                  <a href="#"
                     class=""
                     tal:attributes="href item/getURL; class string:prenotazioni-popup state-${item/review_state}"
                     tal:content="item/Title"
                     >Item title</a>
                </td>
                <td tal:content="phone"></td>
                <td tal:content="gate"></td>
                <td tal:content="tipologia_prenotazione"></td>
                <td>
                  <tal:email tal:condition="email">
                    <a href="mailto:${email}?subject=${subject}"
                       tal:content="email"></a></tal:email></td>
                <td tal:content="date_time"></td>
                <td tal:content="booking_code"></td>
              </tr>
            </tal:block>
          </tbody>
        </table>
        <tal:batchnavigation define="batchnavigation nocall:context/@@batchnavigation"
                             replace="structure python:batchnavigation(batch)" />
    </tal:batch>
    <div class="search_states">
      <h4>Stato delle prenotazioni</h4>
      <ul>
        <li class="pending" tal:content="python:prenotazioni_states['pending']"></li>
        <li class="published" tal:content="python:prenotazioni_states['published']"></li>
        <li class="refused" tal:content="python:prenotazioni_states['refused']"></li>
      </ul>
    </div>
  </div>
</div>

